{
  "name": "mixmaster-pvp",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "devDependencies": {
    "concurrently": "^9.2.1",
    "eslint": "^9",
    "typescript": "^5.4.0"
  },
  "scripts": {
    "dev": "node scripts/dev.mjs",
    "dev:front": "npm run dev -w frontend",
    "dev:back": "npm run dev -w backend",
    "build": "npm run build -w frontend && npm run build -w backend",
    "lint": "npm run lint -w frontend",
    "prisma:migrate": "npm run prisma:migrate -w backend",
    "prisma:generate": "npm run prisma:generate -w backend",
    "prisma:studio": "npm run prisma:studio -w backend"
  }
}